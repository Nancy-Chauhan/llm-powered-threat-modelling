# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/threat_modeling

# Server
PORT=3001

# LLM Provider Configuration
# Provider: 'openai' or 'anthropic' (default: anthropic)
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o
# OPENAI_BASE_URL=https://api.openai.com/v1  # Optional: custom endpoint

# Anthropic Configuration
ANTHROPIC_API_KEY=sk-ant-...
ANTHROPIC_MODEL=claude-sonnet-4-20250514
# ANTHROPIC_BASE_URL=  # Optional: custom endpoint

# LLM Settings (optional)
# LLM_MAX_TOKENS=4096
# LLM_TEMPERATURE=0

# Public URL for share links
PUBLIC_URL=http://localhost:5173

# Storage Provider Configuration
# Provider: 'local' or 's3' (default: local)
STORAGE_PROVIDER=local

# Local Storage Configuration
UPLOAD_DIR=./uploads
UPLOAD_BASE_URL=http://localhost:3001/uploads

# S3 Storage Configuration (when STORAGE_PROVIDER=s3)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# S3_ENDPOINT=  # Optional: for S3-compatible services (MinIO, DigitalOcean Spaces)
# S3_FORCE_PATH_STYLE=false  # Set to true for MinIO
# S3_KEY_PREFIX=threat-models  # Optional: prefix for all uploaded files
# S3_URL_EXPIRY=3600  # Signed URL expiry in seconds (default: 1 hour)
