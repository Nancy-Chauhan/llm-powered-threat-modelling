{
  "name": "threat-modeling-dashboard",
  "private": true,
  "workspaces": ["packages/*", "frontend", "backend"],
  "scripts": {
    "dev": "bun run dev:backend & bun run dev:frontend",
    "dev:frontend": "cd frontend && bun run dev",
    "dev:backend": "cd backend && bun run dev",
    "build": "bun run --parallel build:frontend build:backend",
    "build:frontend": "cd frontend && bun run build",
    "build:backend": "cd backend && bun run build",
    "db:generate": "cd backend && bun run db:generate",
    "db:migrate": "cd backend && bun run db:migrate",
    "db:studio": "cd backend && bun run db:studio"
  },
  "devDependencies": {
    "typescript": "^5.7.2"
  }
}
